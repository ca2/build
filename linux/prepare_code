#!/bin/bash


clone_linux_basis_solution()
{

   cd $HOME

   mkdir solution

   cd solution

   git clone https://github.com/ca2/linux-basis-solution basis --recurse-submodules

}


PATH=$HOME/solution/basis/archive/tool-linux/bin:$PATH


export PATH


. $HOME/solution/basis/archive/tool-linux/bin/_distro__desktop_environment_and_release


patch_shell


clone_linux_basis_solution


checkout


if [ "$DISTRO" = "fedora" ]; then


   fedorarepo


   if [ "$DESKTOP_ENVIRONMENT" = "kde" ]; then


      kfedoradeps


   elif [ "$DESKTOP_ENVIRONMENT" = "gnome" ]; then


      fedoradeps


   fi


elif [ "$DISTRO" = "ubuntu" ]; then


   if [ "$DESKTOP_ENVIRONMENT" = "kde" ]; then


      kubuntudeps


   elif [ "$DESKTOP_ENVIRONMENT" = "gnome" ]; then


      ubuntudeps


   fi


fi





